                      <button class="chkout-btn js_confirm_order chkout-btn--color">
                          <a href="checkout_thanks.html"></a>
                          <span>CONFIRM ORDER</span>
                      </button>
                      {% else%}
                      <button class="chkout-btn chkout-btn--color">
                          <a href="checkout_thanks.html"></a>
                          <span>PAYMENT SUCCESSFUL</span>
