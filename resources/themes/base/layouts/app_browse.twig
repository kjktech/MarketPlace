                            </li>
                            <li class="header__nav-list">
                                <a href="" class="header__nav-link header--outlined">Create an account</a>
                            </li>
                            {% else %}
                            <li class="header__nav-list">
                              <a class="header__nav-link header--outlined" href="{{ route('logout') }}"  onclick="event.preventDefault(); document.getElementById('logout-form').submit();" class="dropdown-item" href="#">Logout</a>
                            </li>
                            <form id="logout-form" action="{{ route('logout') }}" method="POST" style="display: none;">
                                {{ csrf_field() }}
                            </form>
                            {% endif %}
                        </ul>
