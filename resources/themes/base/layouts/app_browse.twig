                            <option value="0">Category</option>


                          </select>
                        </div>
                        <div type="search" class="header__form-select header__input-nav">
                            <select value="{{request('category')}}" name="category">

                              {% if 0 == request('category') or request('category') == "" %}
                               <option selected value="0">All Categories</option>
                              {% else %}
                               <option value="0">All Categories</option>
                              {% endif %}
                              {% for key, category in all_categories %}
                               {% if key == request('category') %}
                                <option selected value="{{key}}">{{category | raw }}</option>
                               {% else %}
                                <option value="{{key}}">{{category | raw}}</option>
                               {% endif %}
                              {% endfor %}
                            </select>
                        </div>
                        <div type="search" class="header__form-select header__input-nav">
                            <select value="{{request('city')}}" name="city">
                              {% for key, city in city_array %}
                                {% if key == request('city') %}
                                 <option selected value="{{key}}">{{city}}</option>
                                {% else %}
                                  <option value="{{key}}">{{city}}</option>
                                {% endif %}
                              {% endfor %}
                            </select>
                        </div>
                        <input type="submit" class="header__submit">
                    </div>
                  </form>
                    <div>
