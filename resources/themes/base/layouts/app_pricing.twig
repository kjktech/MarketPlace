<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    <!-- CSRF Token -->
    <meta name="csrf-token" content="{{ csrf_token() }}">
    <link rel='shortcut icon' type='image/x-icon' href="{{ asset('images/favicon.ico') }}" />
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,500,600,700" rel="stylesheet">
    <link rel="stylesheet" href="{{ asset('themes/' ~  current_theme()  ~ '/css/bootstrap.css') }}">
    <link rel="stylesheet" href="{{ asset('themes/' ~  current_theme()  ~ '/css/main.css') }}">
    <link rel="stylesheet" href="{{ asset('themes/' ~  current_theme()  ~ '/css/logged-navbar.css') }}">
    <script src="{{ asset('themes/' ~  current_theme()  ~ '/js/jquery.min.js') }}"></script>

    <title>Afiaanyi | Business Directory</title>
    <style>
     .dropdown-toggle::after{
       content: none;
     }
     .dropdown-item.a{
       background-color: white;
       color: #007bff !important;
     }
     .dropdown-item.a:focus{
       background-color: white;
       color: #007bff !important;
     }
     .dropdown-item.a:over{
       background-color: white;
       color: #007bff !important;
     }
    </style>
</head>

<body>
  <!--<div data-include="svg.html"></div>-->
  {% include "layouts.svg" %}
  <nav>
      <div class="row header__nav-content">
          <div>
            <a href="{{ route('home')}}">
              <img src="{{ asset('themes/' ~  current_theme()  ~ '/images/market-logo.svg') }}" class="header__logo" alt="Afiaanyi logo">
            </a>
          </div>
          <div>
              <form method="get" action="{{ route('browsebrand')}}">
              <input type="search"  name="q" class="header__form-input header__input-nav" placeholder="Search for products, brands and categories">
              <input type="submit" class="header__submit">
              </form>
          </div>

          <div>
              <ul class="header__nav-list-container">


                  <li class="header__nav-list">
                     <a style="font-weight: bold; color: #E6B712 !important;" class="nav-link navbar__link" href="{{ route('page.topbrands') }}">Afiaanyi's Top Brands</a>
                  </li>
                  <li class="header__nav-list">
                      <a class="git header__nav-link" href="{{ route('page.directory') }}">Directory</a>
                  </li>
                  <li class="header__nav-list">
                      <a class="header__nav-link" href="{{ route('browse') }}">Shop</a>
                  </li>
                  <li class="header__nav-list">
                      <a class="header__nav-link" href="{{ route('blogetc.index') }}">Blog</a>
                  </li>
                  <li class="header__nav-list">
                      <a class="header__nav-link" href="{{ route('blogetc.index') }}">Jobs</a>
                  </li>
              </ul>
          </div>

          {% if auth_guest() %}

          {% else %}
          <div class="header__right-nav">
            <ul style="float: left; padding-top: 12px; font-size: 12px; font-weight: 500;" class="header__nav-list-container">
              <li style="padding-right: 0px;" class="header__nav-list header__nav-list--divider">

                 Welcome, &nbsp;<span class="user__name">{{ auth_user().first_name() }}!</span>
               </li>
             </ul>
             <ul style="float: left;" class="header__nav-list-container">
               <li style="padding-left: 0px;" class="header__nav-list header__nav-list--divider">
                 <span class="dropdown">
                 <a data-toggle="dropdown" href="#" class="dropdown-toggle">
                     <img src="{{ auth_user().avatar }}" class="header-nav-icon header__avatar" height="35px"
                         width="35px">
                 </a>
                 <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                     <a class="dropdown-item" href="{{ route('account.') }}">User Dashboard</a>
                     {% if auth_user().hasRole('admin') or auth_user().hasRole('super-admin') %}
                       <div class="dropdown-divider"></div>
                        <a href="./panel" class="dropdown-item">Manage Site</a>
                     {% endif %}
                     <div class="dropdown-divider"></div>
                     <a href="{{ route('logout') }}"  onclick="event.preventDefault(); document.getElementById('logout-form').submit();" class="dropdown-item" href="#">Logout</a>
                     <form id="logout-form" action="{{ route('logout') }}" method="POST" style="display: none;">
                         {{ csrf_field() }}
                     </form>
                 </div>
                </span>
               </li>
             </ul>
          </div>
          {% endif %}

      </div>
  </nav>

    {% block content %}


    {% endblock %}

    <section class="newsletter">
        <div class="row m-0">
            <div class="col-lg-5 col-md-5 col-sm-6 col-12 mb-4 pl-0">
                <div class="row m-0">
                    <div class="col-lg-6 col-md-6 col-sm-6 col-6">
                        <h4 class="newsletter__head">PHONE SUPPORT</h4>
                        <svg class="icon icon-phone newsletter__icon">
                            <use xlink:href="#icon-phone"></use>
                        </svg>
                        <span class=" newsletter__info">+234 905 300 0056-9</span>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-6 col-6">
                        <h4 class="newsletter__head">EMAIL SUPPORT</h4>
                        <svg class="icon icon-email newsletter__icon">
                            <use xlink:href="#icon-email"></use>
                        </svg>
                        <span class=" newsletter__info">info@afiaanyi.com</span>
                    </div>
                </div>
            </div>
            <div class="col-lg-7 col-md-7 col-sm-6 col-12 newsletter__get-latest">
                <div class="row m-0">
                    <div class="col-lg-6 col-md-12 mb-3">
                        <h4 class="newsletter__head">GET LATEST DEALS & UPDATES</h4>
                        <p class="newsletter__info newsletter__info-getupdate">Stay in the loop on all upcoming
                            promotions, discounts and latest
                            updates.</p>
                    </div>
                    <div class="col-lg-6 col-md-12 pr-0">
                        <div class="newsletter__input-wrapper">
                            <input type="text" name="" id="" placeholder="Enter e-mail" class="newsletter__input">
                            <div class="newsletter__input-btn">
                                <svg class="icon icon-go">
                                    <use xlink:href="#icon-go"></use>
                                </svg>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

   {% include "layouts.footer_latest_base.twig" %}
   {% include "layouts.partials.auth_modals.twig" %}


