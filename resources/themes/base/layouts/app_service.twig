<body>
  <!--<div data-include="svg.html"></div>-->
  {% include "layouts.svg" %}

    <header class="navbar__home business-directory__header fixed-top" id="topnav">
        <nav class="navbar navbar-expand-lg navbar-light">
            <a class="navbar-brand p-0 navbar__brand" href="{{ route('home') }}">
                <img src="{{ asset('themes/' ~ current_theme() ~ '/images/afianni logo.svg') }}" width="76" height="71" alt="">
            </a>

            <ul class="d-sm-block d-lg-none ml-auto">
                <li class="nav-item navbar__create-account navbar__create-account-resp ">
                    <a class="nav-link" href="#">Business Owners</a>
                </li>
            </ul>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse responsive__nav-menu" id="navbarSupportedContent">
                <ul class="navbar-nav ml-auto business-directory__navbar">
                  <li class="nav-item navbar__item">
                    <a style="font-weight: bold; color: #E6B712 !important;" class="nav-link navbar__link" href="{{ route('page.topbrands') }}">Afiaanyi's Top Brands</a>
                  </li>
                   <li class="nav-item navbar__item">
                       <a class="nav-link navbar__link" href="{{ route('page.directory') }}">Directory</a>
                   </li>
                   <li class="nav-item navbar__item">
                       <a class="nav-link navbar__link" href="{{ route('browse') }}">Shop</a>
                   </li>
                   <li class="nav-item navbar__item">
                       <a class="nav-link navbar__link" href="{{ route('page.comingsoon') }}">Jobs</a>
                   </li>
                   {% if auth_guest() %}
                   <li class="nav-item navbar__item">
                       <a class="nav-link navbar__link" href="#login" data-toggle="modal">Login</a>
                   </li>
                   {% endif %}
                </ul>
                {% if auth_user() %}
                <ul class="nav navbar-nav navbar-right">
                    <li class="nav-item navbar__item p-0" style="line-height: 48px;">
                        <span class="logged-navbar__welcome" style="color: #000000;">Welcome, <span style="color: #000000 !important"> {{ auth_user().first_name() }}!</span></span>
                    </li>
                    <li class="nav-item navbar__item dropdown">
                        <a href="#" class="inset dropdown-toggle navbar__link" href="#" id="navbarDropdown" role="button"
                            data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">

                            <img src="{{ auth_user().avatar }}">
                        </a>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="{{ route('account.') }}">User Dashboard</a>
                            {% if auth_user().hasRole('admin') or auth_user().hasRole('super-admin') %}
                              <div class="dropdown-divider"></div>
                               <a href="./panel" class="dropdown-item">Manage Site</a>
                            {% endif %}
                            <div class="dropdown-divider"></div>
                            <a href="{{ route('logout') }}"  onclick="event.preventDefault(); document.getElementById('logout-form').submit();" class="dropdown-item" href="#">Logout</a>
                            <form id="logout-form" action="{{ route('logout') }}" method="POST" style="display: none;">
                                {{ csrf_field() }}
                            </form>
                        </div>
                    </li>

                </ul>
                {% endif %}
            </div>
            {% if auth_guest() %}
            <ul class="d-lg-block d-none">
                <li class="nav-item navbar__create-account">
                    <a class="nav-link" href="#signup-one" data-toggle="modal">Create an account</a>
                </li>
            </ul>
           {% endif %}
        </nav>
    </header>

    {% block content %}


    {% endblock %}

    <section class="newsletter">
        <div class="row m-0">
            <div class="col-lg-5 col-md-5 col-sm-6 col-12 mb-4 pl-0">
                <div class="row m-0">
                    <div class="col-lg-6 col-md-6 col-sm-6 col-6">
                        <h4 class="newsletter__head">PHONE SUPPORT</h4>
                        <svg class="icon icon-phone newsletter__icon">
                            <use xlink:href="#icon-phone"></use>
                        </svg>
                        <span class=" newsletter__info">+234 905 300 0056-9</span>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-6 col-6">
                        <h4 class="newsletter__head">EMAIL SUPPORT</h4>
                        <svg class="icon icon-email newsletter__icon">
                            <use xlink:href="#icon-email"></use>
                        </svg>
                        <span class=" newsletter__info">info@afiaanyi.com</span>
                    </div>
                </div>
            </div>
            <div class="col-lg-7 col-md-7 col-sm-6 col-12 newsletter__get-latest">
                <div class="row m-0">
                    <div class="col-lg-6 col-md-12 mb-3">
                        <h4 class="newsletter__head">GET LATEST DEALS & UPDATES</h4>
                        <p class="newsletter__info newsletter__info-getupdate">Stay in the loop on all upcoming
                            promotions, discounts and latest
                            updates.</p>
                    </div>
                    <div class="col-lg-6 col-md-12 pr-0 newsletter-wrapper">
                       <form id="subscribe-form" method="get" action="{{route('page.subscribe')}}">
                        <div class="newsletter__input-wrapper">
                          <input type="text" name="email" required placeholder="Enter e-mails" class="newsletter__input">
                          <button style="visibility: hidden;" type="submit" id="subscribe-btn"></button>
                          <div onclick="document.getElementById('subscribe-btn').click();" class="newsletter__input-btn">
                              <svg class="icon icon-go">
                                  <use xlink:href="#icon-go"></use>
                              </svg>
                          </div>
                        </div>
                      </form>
                    </div>
                </div>
            </div>
        </div>
    </section>

