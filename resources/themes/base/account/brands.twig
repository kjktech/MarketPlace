            <div class="panel panel-default panel-table">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col col-md-11">
                            <h2 class="panel-title">{{ __('Businesses') }}</h2>
                        </div>
                        <div class="col col-md-1">
                            <a href="{{url('create')}}" class="btn btn-sm btn-danger btn-create">Create New</a>
                        </div>
                    </div>
                </div>
                <br>
                <div class="panel-body">
                    <table class="table table-striped table-bordered table-list">
                        <thead>
                        <tr>
                            <th class="hidden-xs">{{ __('Title') }}</th>
                            <th>{{ __('Date Created') }}</th>
                            <th>{{ __('Verification Status') }}</th>
                            <th><em class="fa fa-cog"></em></th>

                        </tr>
                        </thead>
                        <tbody>
                        {% for i, item in brands %}
                            <tr>
                                <td><a href="{{ item.url }}" class="text-dark">{{ item.name | str_limit(40) }}</a></td>
                                <td class="hidden-xs">{{ item.created_at.toFormattedDateString() }}</td>
                                <td class="hidden-xs">
                                {% if item.is_admin_verified %}
                                  Verified
                                {% else %}
                                  Not verified
                                {% endif %}
                                </td>
                                <td align="center">
                                  {% if item.stores|length > 0 %}
                                   <a href="{{ route('createstore.edit', item.stores[0]) }}" class="text-muted edit-icon-space"><i class="fa fa-shopping-cart"></i></a>
                                  {% else %}
                                   <a href="{{ route('createstore.store')}}?directory_id={{ item.id }}" class="text-muted edit-icon-space"><i class="fa fa-shopping-cart"></i></a>
                                  {% endif %}
                                    <a href="{{ item.edit_url }}" class="btn btn-danger"><em class="fa fa-pencil"></em></a>
                                </td>
                            </tr>
                        {% endfor %}
                        {{ stores.links() | raw }}
