{# extends "account.master" % #}
{% extends "layouts.app_master_dashboard" %}

{% block content %}
<style>
    .panel-table .panel-body .table-bordered{
        border-style: none;
        margin:0;
        width: 680px;
    }
    .panel-table .panel-body .table-bordered > thead > tr > th:last-of-type {
        text-align:center;
    }
    .fa-pencil {
      color: white;
    }
</style>
<section class="user-profile">
            <div class="panel panel-default panel-table">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col col-md-11">
                            <h2 class="panel-title">{{ __('Wishlist') }}</h2>
                        </div>
                        <div class="col col-md-1">

                        </div>
                    </div>
                </div>
                <br>
                <div class="panel-body">
                    <table class="table table-striped table-bordered table-list">
                        <thead>
                        <tr>
                            <th class="hidden-xs">{{ __('Title') }}</th>
                            <th>{{ __('Price') }}</th>
                            <th>{{ __('Date Added') }}</th>
                            <th><em class="fa fa-cog"></em></th>

                        </tr>
                        </thead>
                        <tbody>
                        {% for i, item in wishlist %}
                            <tr>
                                <td><a href="{{ item.url }}" class="text-dark">{{ item.title | str_limit(40) }}</a><br>
                                 <img class="product-image" width="50px" src='{{ item.thumbnail }}'/>
                                </td>
                                <td>â‚¦{{ item.price }}</td>
                                <td class="hidden-xs">{{ item.created_at.toFormattedDateString() }}</td>
                                <td align="center">
                                 <a href="{{ item.url }}"><em class="fa fa-eye"></em></a>
                                </td>
                            </tr>
                        {% endfor %}
                        {{ wishlist.links() | raw }}
                        </tbody>
                    </table>
                </div>
            </div>
            {{ brands.links() | raw }}

</section>
{% endblock %}
