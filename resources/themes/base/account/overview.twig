                        -->
                        <tr class="user-profile__details-row">
                            <td class="user-profile__details-key">Email:</td>
                            <td class="user-profile__details-answer">{{ auth_user().email}}</td>
                        </tr>
                        <tr class="user-profile__details-row">
                            <td class="user-profile__details-key">Registered On</td>
                            <td class="user-profile__details-answer">{{ user.created_at.toFormattedDateString() }}</td>
                        </tr>
                        <tr class="user-profile__details-row">
                            <td>Account Status</td>
                            <td class="user-profile__details-answer">
                                {% if user.verified == 0 %}
                                    Not Activated
                                {% else %}
                                    Activated
                                {% endif %}
                              </td>
                        </tr>
                        {% if auth_user().phone %}
                        <tr class="user-profile__details-row">
                            <td class="user-profile__details-key">Tel:</td>
                            <td class="user-profile__details-answer">{{ auth_user().phone}}</td>
                        </tr>
                        {% endif %}
                        <tr class="user-profile__details-row">
                            <td class="user-profile__details-key">Loyalty points</td>
                            <td class="user-profile__details-answer">{{ auth_user().currentPoints() }}</td>
                        </tr>
                    </table>

                </div>
            </div>
            <div class="user-profile__business">
                <div class="user-profile__status">
                    <h3 class="user-profile__status-heading">Your profile is <span>{{ auth_user().userProfileState()}}%</span> complete</h3>
                    <div id="progressbar"></div>
                    <a href="{{ route('account.edit_profile.index') }}" class="user-profile__edit">Edit Profile</a>
                </div>
