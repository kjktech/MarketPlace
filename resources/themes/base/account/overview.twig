{% extends "layouts.app_dashboard" %}

{% block content %}


<section class="user-profile">
        {% include 'notifications' %}
        <div class="user-profile__top">
            <p class="user-profile__heading">You have the ability to view a snapshot of your recent account activity and
                update your account info from
                your dashboard</p>
        </div>
        <div class="user-profile__content d-flex">
            <div class="user-profile__overview">
                <div class="user-profile__overview-heading">
                    <h3>Overview</h3>
                </div>
                <div class="user-profile__details">
                    <table class="w-100 user-profile__details-table">
                        <tr class="user-profile__details-row">
                            <td class="user-profile__details-key">Name:</td>
                            <td class="user-profile__details-answer">{{ auth_user().name}}</td>
                        </tr>
