            <div class="card card-block card-form">
                <div class="card-header">
                    {{ __("Subscribe to our Newsletter") }} <span style="float: right; display: inline-block;"><a href="{{ app.redirect.getUrlGenerator().previous() }}">Back</a></span>
                </div>
                <div class="card-body">
                    <form id="subscribe-form" method="POST" action="{{ route('page.postsubscribe') }}">
                        {{ csrf_field() }}
                        <div class="form-group">
                            <label class="form-control-label" for="email">{{ __("Email address") }}</label>
                            <input class="form-control{{errors.has('email') ? ' is-invalid' : '' }}" type="text" id="email" name="email" value="{{ old('email', email) }}"
                                   placeholder="Enter your email" required autofocus>
                            {% if errors.has('email') %}
                                <small class="form-control-feedback invalid-feedback">{{errors.first('email') }}</small>
                            {% endif %}
                        </div>

                        <div class="form-group">
                            <label class="form-control-label" for="email">{{ __("Name") }}</label>
                            <input class="form-control{{errors.has('name') ? ' is-invalid' : '' }}" type="text" id="name" name="name" value="{{ old('name') }}"
                                   placeholder="Enter your name" required autofocus>
                            {% if errors.has('name') %}
                                <small class="form-control-feedback invalid-feedback">{{errors.first('name') }}</small>
                            {% endif %}
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-md btn-primary btn-block">{{ __("Subscribe") }}</button>

                        </div>
                    </form>
                </div>
            </div>
