<script>
  var subForm = $("#subscribe-form");
  subForm.submit( function(e){

    e.preventDefault();
    //alert('Submitted');
    var formData = subForm.serialize();
    $.ajax({
       url: '{{ route('page.postsubscribe') }}',
       type:'POST',
       data:formData,
       success:function(data){
        $('.card-form').hide();
        $('.card-message').show();
      },
      error: function (data) {


      },
      completed: function (data) {

      }
    });
  });
</script>
